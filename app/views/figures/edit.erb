<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">
<br>
<br>

  <label for="name">Titles</label>
<br>
  <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"
   <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <% end %>
<br>
<br>
  <label>or create a new title:</label>
  <br>
  <label>name:</label>
    <input type="text" id="new_title" name="title[name]"></input>
  <br>

<br>
  <label for="name">Landmarks</label>
<br>
  <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"
  <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <% end %>
<br>
<br>
  <label>or create a new landmark:</label>
  <br>
  <label>name:</label>
    <input type="text" id="new_landmark" name="landmark[name]"></input>

  <br>
  <button type="submit">Edit Figure</button>

</form>
